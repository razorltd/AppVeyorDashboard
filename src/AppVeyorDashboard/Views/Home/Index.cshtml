<div style="height: 100%; position: absolute; width: 100%;">
   <div style="display: block; position: relative; right: auto; top: 50%; transform: translateY(-50%);">
      <div class="container-fluid text-center">
         <div class="row">
            <div class="col-md-6 mb-5">
               <div class="row">
                  <div class="col-md-8 offset-md-2 col-lg-6 offset-md-3">
                     <h1 class="display-4 mb-5">
                        Builds
                     </h1>
                     <form action="@Url.RouteUrl("ListBuilds")" method="GET">
                        <div class="form-group">
                           <input class="form-control" name="project" placeholder="Project (optional)" type="text" />
                        </div>
                        <div class="form-group">
                           <input class="form-control" name="branch" placeholder="Branch (optional)" type="text" />
                        </div>
                        <button class="btn btn-primary btn-block" type="submit">View</button>
                     </form>
                  </div>
               </div>
            </div>
            <div class="col-md-6">
               <div class="row">
                  <div class="col-md-8 offset-md-2 col-lg-6 offset-md-3">
                     <h1 class="display-4 mb-5">
                        Deployments
                     </h1>
                     <form action="@Url.RouteUrl("ListDeployments")" method="GET">
                        <div class="form-group">
                           <input class="form-control" name="environment" placeholder="Environment (optional)" type="text" />
                        </div>
                        <button class="btn btn-primary btn-block" type="submit">View</button>
                     </form>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>